{{#section 'css'}}
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">

{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
  $(function () {

    $('#datesinh').datetimepicker({
      format: 'd/m/Y',
      timepicker: false,
      mask: true,
    });
  })
</script>
<script>
  $(function () {

    $('#frmRegister').validate({
      rules: {
        matkhau: {
          required: true,
          minlength: 6
        },
        confirm: {
          required: true,
          equalTo: $('[name="matkhau"]')
        },
        ten: {
          required: true,
        },
        email: {
          required: true,
          email: true
        },
        dob: {
          required: true,
        }
      },
      messages: {

        matkhau: {
          required: 'Your password is required.',
          minlength: 'Your password must have at least 6 characters.'
        },
        confirm: {
          required: 'Your password does not match.',
          equalTo: 'Your password does not match.'
        },
        ten: {
          required: 'Valid full name is required.',
        },
        email: {
          required: 'Please enter a valid email address.',
          email: 'Please enter a valid email address.'
        },
        dob: {
          required: '&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;&nbsp;Valid date of birth is required.',
        }
      },

      errorElement: 'small',
      
      errorClass: 'help-block text-danger erRed',
      validClass: 'is-valid',
      highlight: function (e) {
        $(e).removeClass('is-valid').addClass('is-invalid');
      },
      unhighlight: function (e) {
        $(e).removeClass('is-invalid').addClass('is-valid');
      }
    });
  })


</script>
{{/section}}


<form novalidate method="POST" id="frmRegister" action="/dangki" class="register">
  <div>
    <div class="shadow p-3 mb-5 bg-white rounded">
      <div>

        <br>
        <br>
        <br>
        <p style="margin-top: 10px">Đăng kí tài khoản </p>
        <fieldset class="row1">
          <legend>Thông tin tài khoản
          </legend>
          <p>
            <label>Email *
            </label>
            <input name="email" style="width: 220px;height: 25px;" type="text" />

          </p>
          <p>
            <label>Mật khẩu *
            </label>
            <input name="matkhau" style="width: 220px;height: 25px;" type="password" />
          </p>
          <p>
            <label>Nhập lại mật khẩu*
            </label>
            <input name="confirm" style="width: 220px;height: 25px;" type="password" />

            </label>
          </p>
        </fieldset>
        <fieldset class="row2">
          <legend>Thông tin cá nhân
          </legend>
          <p>
            <label>Tên *
            </label>
            <input name="ten" style="width: 220px;height: 25px;"  type="text" class="long" />
          </p>

          <p>
            <label>Ngày sinh
            </label>
            <input type="date" class="form-control" style="width: 220px;height: 30px;" id="" name="dob">
          </p>

        </fieldset>
      </div>
      <div>
        <button type="submit" style="margin-top: 20px; margin-left: 450px" class="button">
          Register
        </button>
      </div>
    </div>
  </div>

</form>